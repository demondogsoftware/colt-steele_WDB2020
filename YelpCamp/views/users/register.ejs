<% layout('layouts/boilerplate')%>
<div class="container row d-flex justify-content-center align-items-center my-5">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div class="card shadow">
            <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="pitched orange tent atop grassy mountain top" class="card-img-top img-fluid" />
            <div class="card-body">
                <h5 class="card-title">Register</h5>
                <form class="needs-validation" action="/register" method="POST" novalidate>
                    <p class="my-3">
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" id="username" class="form-control" name="user[username]" autofocus required>
                        <p class="valid-feedback">
                            VALID USERNAME NAME
                        </p>
                        <p class="invalid-feedback">
                            INVALID USERNAME NAME
                        </p>
                    </p>
                    <p class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" class="form-control" name="user[email]" required>
                        <p class="valid-feedback">
                            VALID EMAIL ADDRESS
                        </p>
                        <p class="invalid-feedback">
                            INVALID EMAIL ADDRESS
                        </p>
                    </p>
                    <p class="mb-3">
                        <label for="password" class="form-label">Password: </label>
                        <input type="password" id="password" class="form-control" name="user[password]" required>
                        <p class="valid-feedback">
                            VALID PASSWORD
                        </p>
                        <p class="invalid-feedback">
                            INVALID PASSWORD
                        </p>
                    </p>
                    <button class="btn btn-success btn-block mb-3">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-6 offset-2">
        <div class="card">
            <img src="<%= campground.image %> class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= campground.price %></li>
                <li class="list-group-item"><%= campground.location %></li>
            </ul>
            <div class="card-body">
                <p class="card-text">
                    <%= campground.description %>
                </p>
                <a href="/campgrounds">All Campgrounds</a>
                <a href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button>DELETE</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-3">
        <h2>Leave A Review</h2>
        <form class="needs-validation" action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate>
            <p>
                <label class="form-label" for="rating">Rating</label>
                <input id="rating" class="form-range" type="range" min="1" max="5" name="review[rating]">
            </p>
            <p>
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <p class="valid-feedback">
                    VALID REVIEW
                </p>
                <p class="invalid-feedback">
                    REVIEW REQUIRED
                </p>
            </p>
            <button class="btn btn-success">Submit Review</button>
        </form>
        <% for( let review of campground.reviews ) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= review.rating %></h5>
                    <p class="card-text">
                        <%= review.body %>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
</div>
<% layout('layouts/boilerplate')%>
    <h1>Edit <%= campground.title %></h1>
    <form class="needs-validation my-3" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate enctype="multipart/form-data">
        <p class="mb-3">
            <label for="title">Campground Name</label>
            <input type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
            <p class="valid-feedback">
                VALID CAMPGROUND NAME
            </p>
            <p class="invalid-feedback">
                INVALID CAMPGROUND NAME
            </p>
        </p>
        <p class="mb-3">
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
            <p class="valid-feedback">
                VALID CAMPGROUND LOCATION
            </p>
            <p class="invalid-feedback">
                INVALID CAMPGROUND LOCATION
            </p>
        </p>
        <p class="mb-3">
            <label for="price">Price</label>
            <input type="text" id="price" name="campground[price]" value="<%= campground.price %>" required>
            <p class="valid-feedback">
                VALID CAMPGROUND PRICE
            </p>
            <p class="invalid-feedback">
                INVALID CAMPGROUND PRICE
            </p>
        </p>
        <p class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="campground[description]" id="description" class="form-control" cols="30" rows="10" value="<%= campground.description %>" required></textarea>
            <p class="valid-feedback">
                VALID CAMPGROUND DESCRIPTION
            </p>
            <p class="invalid-feedback">
                INVALID CAMPGROUND DESCRIPTION
            </p>
        </p>
        <p class="input-group mb-3 custom-file">
            <label class="input-group-text custom-file" for="image">Add More Image(s)</label>
            <input type="file" class="form-control" id="image" name="image" multiple>
        </p>
        <div class="mb-3">
            <% campground.images.forEach((img, i) => { %>
                <img class="img-thumbnail" src="<%= img.thumbnail %>" alt="">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="deleteImgs[]" value="<%= img.filename %>" id="image-<%= i %>">
                    <label class="form-check-label" for="image-<%= i %>">
                      Remove Image
                    </label>
                  </div>
            <% }) %>  
        </div>
        <button class="btn btn-success">Edit</button>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Cancel</a>